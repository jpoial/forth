DEFINITION MODULE MAATRIKS;
CONST MSIZE = 50;
TYPE MAT = ARRAY [ 1..MSIZE ], [ 1..MSIZE ] OF REAL;
PROCEDURE RDMAT(VAR A: MAT; VAR M,N: CARDINAL);
PROCEDURE WRMAT(A: MAT; M,N: CARDINAL);
PROCEDURE ADDMAT(A,B: MAT; M,N: CARDINAL; VAR C: MAT);
PROCEDURE MULMAT(A,B: MAT; M,N,P: CARDINAL; VAR C: MAT);
PROCEDURE SCALEMAT(A: MAT; M,N: CARDINAL; K: REAL; VAR C: MAT);
PROCEDURE TRMAT(A: MAT; M,N: CARDINAL; VAR C: MAT);
PROCEDURE INVMAT(A: MAT; N:CARDINAL; VAR C: MAT; VAR ERRFLAG: BOOLEAN);
PROCEDURE UNITMAT(N: CARDINAL; VAR C: MAT);
PROCEDURE CONSTMAT(R: REAL; M,N: CARDINAL; VAR C: MAT);
END MAATRIKS.
